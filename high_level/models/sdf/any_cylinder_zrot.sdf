<?xml version="1.0"?>

<!-- 
  This file contains a cylinder which rotates only around
  the z-axis. The x and y values are fixed. The cylinder
  has arbitrary geometry.
-->

<sdf version="1.7">
  <model name="any_cylinder">

    <joint name="world_cylinder_offset" type="fixed">
      <child>cylinder_root</child>
      <parent>world</parent>
      <axis>
        <limit>
          <effort>0</effort>
        </limit>
      </axis>
    </joint>

    <link name="cylinder_root">
      <pose relative_to="__model__">-0.05 0.0 0.09 0.0 0 0</pose>
    </link>

    <joint name="cylinder_root_joint" type="revolute">
        <child>cylinder_link</child>
        <parent>cylinder_root</parent>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <effort>0</effort>
          </limit>
        </axis>
    </joint>

    <link name="cylinder_link">
      <pose relative_to="cylinder_root">0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <visual name="visual">
        <pose relative_to="cylinder_root">0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>package://drake_models/custom_objects/meshes/geom_bspline_1.obj</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.1 0.5 0.5 0.8</diffuse>
        </material>
      </visual>

      <visual name="visual_2">
        <pose> 0 0 0.05 0 0 0 </pose>
        <geometry>
          <box>
           <size>0.02 0.02 0.002 </size>
          </box>
        </geometry>
        <material>
          <diffuse>0.6 0.2 0.2 0.9</diffuse>
        </material>
      </visual>

      <collision name="collision">
        <pose> 0 0 0 0 0 0 </pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>package://drake_models/custom_objects/meshes/geom_bspline_1.obj</uri>
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="collision_vis">
        <pose> 0 0 0 0 0 0 </pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>package://drake_models/custom_objects/meshes/geom_bspline_1.obj</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.8 0.2 0.2 0.4</diffuse>
        </material>
      </visual>

    </link>

  </model>
</sdf>
